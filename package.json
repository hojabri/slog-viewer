{
  "name": "slog-viewer",
  "displayName": "Slog Viewer",
  "description": "Transforms structured JSON logs in the Debug Console into readable, colored, and collapsible format",
  "version": "1.0.0",
  "publisher": "hojabri",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers",
    "Formatters"
  ],
  "keywords": [
    "json",
    "logs",
    "slog",
    "debug",
    "console",
    "structured-logging"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "slog-viewer.toggle",
        "title": "Slog Viewer: Toggle Formatting"
      },
      {
        "command": "slog-viewer.enable",
        "title": "Slog Viewer: Enable"
      },
      {
        "command": "slog-viewer.disable",
        "title": "Slog Viewer: Disable"
      },
      {
        "command": "slog-viewer.clearLogs",
        "title": "Slog Viewer: Clear Logs"
      }
    ],
    "views": {
      "panel": [
        {
          "id": "slog-viewer.logView",
          "name": "Slog Viewer",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "slog-viewer.logView",
        "contents": "No logs yet.\n\nStart debugging to see formatted structured logs.\n\n[Start Debugging](command:workbench.action.debug.start)"
      }
    ],
    "configuration": {
      "title": "Slog Viewer",
      "properties": {
        "slogViewer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic formatting of JSON logs"
        },
        "slogViewer.collapseJSON": {
          "type": "boolean",
          "default": true,
          "description": "Show JSON collapsed by default (click to expand)"
        },
        "slogViewer.showOriginal": {
          "type": "boolean",
          "default": false,
          "description": "Show original JSON log alongside formatted output"
        },
        "slogViewer.maxLogEntries": {
          "type": "number",
          "default": 10000,
          "description": "Maximum number of log entries to keep in memory"
        },
        "slogViewer.autoScroll": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scroll to the latest log entry"
        },
        "slogViewer.theme": {
          "type": "string",
          "enum": ["light", "dark", "auto"],
          "default": "auto",
          "description": "Theme for the log viewer (auto uses VSCode theme)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
